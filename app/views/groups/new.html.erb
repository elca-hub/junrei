<% provide(:page_title, "グループの追加") %>

<div class="main-box">
  <div class="text-center">
    <h2>グループの新規追加</h2>
    <p>新しくグループを追加します。</p>
  </div>
  <div class="main-content">
    <%= form_with model: @group do |f| %>
      <div class="mb-3">
        <%= f.label :name, "グループ名", class: "form-label" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.submit "新規追加", class: "btn btn-dark w-100" %>
      </div>
    <% end %>
  </div>
</div>
