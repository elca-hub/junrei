<% provide(:page_title, "グループの変更") %>

<div class="main-box">
  <div class="text-center">
    <h2>グループ情報の変更</h2>
    <p>グループ情報の内容を変更します。</p>
  </div>
  <div class="main-content">
    <%= form_for(@group, url: {controller: 'groups', action: 'update', id: @group.id}) do |f| %>
      <div class="mb-3">
        <%= f.label :name, "グループ名", class: "form-label" %>
        <%= f.text_field :name, autofocus: true, class: "form-control", value: @group.name %>
      </div>

      <div class="mb-3">
        <%= f.label :comment, "コメント", class: "form-label" %>
        <%= f.text_area :comment, class: "form-control", style: "height: 150px; width: 350px" do %>
            <%= @group.comment %>
        <% end %>
        <div class="form-text">50文字以内で入力してください。</div>
      </div>

      <div class="mb-3">
        <%= f.submit "変更", class: "btn btn-dark w-100" %>
      </div>
    <% end %>

    <%= form_with model: @group, method: :delete do |f| %>
      <div class="my-4">
        <%= f.submit "削除", class: "btn btn-outline-danger w-100" %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= link_to "戻る", :back, class: "btn btn-outline-primary w-100" %>
    </div>
  </div>
</div>
