<div class="main-box">
  <div class="text-center">
    <h2>ログイン</h2>
  </div>
  <div class="main-content">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class:"form-label" do %>
        メールアドレス
      <% end %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  
    <div class="mb-3">
      <%= f.label :password, class: "form-label" do %>
        パスワード
      <% end %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="mb-3 form-check form-switch">
        <%= f.check_box :remember_me, class: "form-check-input", role: "switch" %>
        <%= f.label :remember_me, class: "fomr-check-label" do %>
          ログイン状態を保持する
        <% end %>
      </div>
    <% end %>
  
    <div class="mb-3">
      <%= f.submit "ログイン", class: "btn btn-dark w-100" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
  </div>
</div>

